<%= render 'shared/errors', obj: @user %>
<div class='row'>
  <div class='col-xs-12'>
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %> 
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :ユーザー名 %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :username, class: "form-control", placeholder: "ユーザー名を入力", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :メールアドレス %>
        </div>
        <div class="col-sm-8">
          <%= f.email_field :email, class: "form-control", placeholder: "メールアドレスを入力" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :profile %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :profile, class: "form-control", placeholder: "自己紹介を入力" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :パスワード %>
        </div>
        <div class="col-sm-8">
          <%= f.password_field :password, class: "form-control", placeholder: "パスワードを入力" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= link_to "キャンセル", articles_path, class: "text-success" %> <%= f.submit(@user.new_record? ? "サインアップ" : "更新する", class: 'btn btn-success btn-md') %>
        </div>
      </div>
    <% end %>
  </div>
</div>