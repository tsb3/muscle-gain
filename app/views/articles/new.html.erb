<h1>記事を作成する</h1>

<% if @article.errors.any? %>
<h2>以下をご確認ください</h2>
<ul>
    <% @article.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
</ul>
<% end %>

<%= form_for @article do |f| %>
    <p>
        <%= f.label :タイトル %>
        <%= f.text_field :title %>
    </p>
    <p>
        <%= f.label :本文 %>
        <%= f.text_area :description %>
    </p>
    <p>
        <%= f.submit %>
    </p>
<% end %>